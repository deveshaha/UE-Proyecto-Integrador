<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/global_padding"
    android:background="@color/backgroundApp"
    tools:context=".SessionActivity">

    <TextView
        android:id="@+id/tv_session_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_movie_name"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/movie_title">
    </TextView>

    <TextView
        android:id="@+id/tv_session_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_session_info"
        android:textSize="@dimen/sub_title"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_session_name"
        android:layout_marginTop="@dimen/global_padding">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSessions"
        app:layout_constraintTop_toBottomOf="@+id/tv_session_info"
        android:layout_marginTop="@dimen/global_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>